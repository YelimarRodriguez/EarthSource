<% @events.each do |event| %>
    <div class="panel panel-warning">
      <div class="panel-heading test">
        <h3 class="panel-title"><%= event.title %></h3>
      </div>


      <div class="panel-body event">
        <div class="event-profile">
          <%= link_to image_tag(event.user.pic.thumb, {class: 'rounded-profile-pic pull-right'}), user_profile_path(event.user) %>
          <h3 class="leader">Group Leader</h3>
        </div>


        <p><%= event.date.strftime("%B %d, %Y") %></p>

        <p><%= event.time.strftime("%I:%M %P") %></p>

        <p><%= event.location %></p>

        <p><%= truncate(event.description, length: 300) %>
          <%= link_to 'See more details', event %></p>
      </div>
    </div>

<% end %>