<div class="foreground"><h1>Add a New Event</h1>

<%= form_for @event, html: {class: "form-horizontal"} do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited
            this post from being saved:</h2>
          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <h4><%= f.label :date %></h4>
    <p><%= f.date_select :date%></p>
    <h4><%= f.label :time %></h4>
    <p><%= f.time_select :time, ampm: true %></p>
    <h4><%= f.label :location %></h4>
    <p><%= f.text_field :location, class: "form-control" %>
    <h4><%= f.label :title %></h4>
    <p><%= f.text_field :title, class: "form-control" %></p>
    <h4><%= f.label :description %></h4>
    <p><%= f.text_area :description, class: "form-control" %></p>


    <h3> <%= f.submit class: 'btn btn-primary' %></h3>
<% end %>
<%= link_to 'Back to Events', events_path %>


</div>